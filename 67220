len=20
side=100
v=10
s=360/side
t=180-s
import math
rep=int(len/(2*v*math.cos(math.radians(t/2))))+1
import turtle
a=turtle.Turtle()
a.penup()
a.right(90)
a.forward(300)
a.right(90)
a.forward(len/2)
a.left(180)
a.pendown()
for i in range(rep):
	for i in range(side):
		a.forward(len)
		a.left(s)
	a.penup()
	a.left(t/2)
	a.forward(v)
	a.right(t/2)
	a.pendown()
	len=len-2*v*math.cos(math.radians(t/2))
turtle.done()